<h2> Search Books</h2>
<form action='/books' method='GET'>

    <div>
        <label>Title</label>
        <input type="text" name="title" value="<%= locals.searchOptions.title %>" >
    </div>
    <div>
        <label>Published After</label>
        <input type="date" name="publishedAfter" value="<%= locals.searchOptions.publishedAfter %>" >
    </div>
    <div>
        <label>Published Before</label>
        <input type="date" name="publishedBefore" value="<%= locals.searchOptions.publishedBefore %>" >
    </div>
    <button type="submit">Search</button>

</form>
<div>
    <% books.forEach(book => { %>
        <span>
            <img height="150" width="100" src="<%= book.coverImagePath %>">
            <p><%= book.title %></p>
            <p><%= book.publishDate %></p>
        </span>
    <% }) %>
    </div>